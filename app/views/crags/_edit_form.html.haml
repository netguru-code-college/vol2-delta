=form_for @crag, url: crag_path(@crag) do |f|

  .form-group

  =f.label :name, class: 'form-group'
  =f.text_field :name, class: 'form-control'

  =f.label :country, class: 'form-group'
  =f.country_select(:country,  {:prompt => "Select contry..."}, {:selected => "PL", class: 'form-control'})

  =f.label :latitude, class: 'form-group'
  =f.text_field :latitude, class: 'form-control'

  =f.label :longitude, class: 'form-group'
  =f.text_field :longitude, class: 'form-control'

  %br
  .form-group
    =f.submit class: 'btn btn-success'
