.jumbotron.jumbotron-fluid
  .container
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .col-md-12
          = f.email_field :email, autocomplete: "email", class: 'form-control', autofocus: true, placeholder: 'Email'
        .col-md-6
          = f.text_field :first_name, autocomplete: "first_name", class: 'form-control', placeholder: 'First name'
        .col-md-6
          = f.text_field :last_name, autocomplete: "last_name", class: 'form-control', placeholder: 'Last name'
        .col-md-6
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password (#{@minimum_password_length} characters minimum)"
        .col-md-6
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password confirmation'
        .col-md-6
        .form-group.col-md-6
          = f.submit "Sign up", class: 'btn btn-success btn-block'
          = link_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-block'
