.jumbotron
  .container
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .row
        .col-md-6
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email'
        .col-md-6
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'
        - if devise_mapping.rememberable?
          .col-md-6
          .col-md-6
            = f.check_box :remember_me
            = f.label :remember_me
        .col-md-6
        .actions.col-md-6
          = f.submit "Log in", class: 'btn btn-success btn-block'
          = link_to "Log in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-primary btn-block'
